{
	"name": "@formisch/adapters",
	"description": "Schema adapters for Formisch form library",
	"version": "0.1.0",
	"license": "MIT",
	"author": "Fabian Hiller",
	"homepage": "https://formisch.dev",
	"repository": {
		"type": "git",
		"url": "https://github.com/fabian-hiller/formisch"
	},
	"keywords": ["form", "validation", "schema", "valibot", "zod", "typescript"],
	"type": "module",
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"default": "./dist/index.js"
		},
		"./valibot": {
			"types": "./dist/valibot.d.ts",
			"default": "./dist/valibot.js"
		},
		"./zod": {
			"types": "./dist/zod.d.ts",
			"default": "./dist/zod.js"
		}
	},
	"sideEffects": false,
	"files": ["dist"],
	"publishConfig": {
		"access": "public"
	},
	"scripts": {
		"test": "vitest --typecheck",
		"coverage": "vitest run --coverage --isolate",
		"lint": "eslint \"src/**/*.ts*\" && tsc --noEmit",
		"lint.fix": "eslint \"src/**/*.ts*\" --fix",
		"format": "prettier --write ./src",
		"format.check": "prettier --check ./src",
		"build": "tsdown"
	},
	"devDependencies": {
		"@eslint/js": "^9.31.0",
		"@formisch/types": "workspace:*",
		"@types/node": "24.0.13",
		"@vitest/coverage-v8": "^3.2.4",
		"eslint": "^9.31.0",
		"eslint-plugin-import": "^2.32.0",
		"eslint-plugin-jsdoc": "^51.3.4",
		"eslint-plugin-security": "^3.0.1",
		"jsdom": "^26.1.0",
		"rolldown": "1.0.0-beta.26",
		"rolldown-plugin-dts": "^0.13.13",
		"tsdown": "^0.12.9",
		"typescript": "^5.8.3",
		"typescript-eslint": "^8.36.0",
		"valibot": "^1.1.0",
		"zod": "^3.23.8",
		"vitest": "3.2.4"
	},
	"dependencies": {
		"@formisch/types": "workspace:*"
	},
	"peerDependencies": {
		"typescript": ">=5",
		"valibot": "^1.0.0",
		"zod": "^3.0.0"
	},
	"peerDependenciesMeta": {
		"typescript": {
			"optional": true
		},
		"valibot": {
			"optional": true
		},
		"zod": {
			"optional": true
		}
	}
}
